{
  "version": 2,
  "builds": [
    {
      "src": "portfolio-bilingue/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "portfolio-bilingue/build" }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/portfolio-bilingue/index.html"
    }
  ]
} 